        <string name="filename" value="./models/arrow.obj" />
        <transform name="toWorld">
            <scale x="0.1" y="0.1" z="0.1"/>
            <rotate z="1" angle="90" />
            <rotate z="1" angle="$angleZ" />
            <translate x="0.0" y="0.3" z="0.73" />
        </transform>
        <bsdf type="roughplastic">
